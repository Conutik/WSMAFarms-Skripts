		wait 0.2 second
		set block at {_b} to freshly planted wheat plant
		set {_n} to random integer between 2 and 5
		set {_n} to "%{_n}% wheat" parsed as item
		give {_n} to {_p}


	if {_b} is fully grown carrot plant:
		set block at {_b} to stage 6 carrot plant
		wait 0.2 second
		set block at {_b} to stage 5 carrot plant
		wait 0.2 second
